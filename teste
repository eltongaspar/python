# testes

texto = "Hello World"

# Utilizando slicing para extrair "Hello"
# O índice começa em 0 e vai até 4 (o 5o índice
#não é incluído)
palavra = texto[0:5]

print(palavra)




texto = "Bem-vindo ao mundo de Python!"

# Usando find
indice = texto.find("mundo")
print(indice) # Saída: 13

# Usando expressões regulares
import re
if re.search("Python", texto):
    print("Python encontrado!")


def inverter_string(s):
    return s[::-1]

# Testando a função
texto = "Hello"
texto_invertido = inverter_string(texto)
print(texto_invertido)  # Saída esperada: "olleH"